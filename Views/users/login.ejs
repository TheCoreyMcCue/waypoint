<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5 testing">
    <div class="row">
        <div class="col-12">
            <h1 class="button-div">Welcome back</h1>
            <div class="card shadow p-5">
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" class="form-control" name="username" id="username" autofocus required>
                        <div class="invalid-feedback">
                            Please provide a username
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" required>
                        <div class="invalid-feedback">
                            Please provide a password
                        </div>
                    </div>
                    <button class="btn btn-success btn-block w-100">Login</button>
                </form>
                <a href="/register" class="login-link mt-3">Don't have an account yet? Sign up</a>
            </div>
        </div>
    </div>
</div>

